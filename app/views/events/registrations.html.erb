<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-white shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Registrations</h2>
          
          <div class="card bg-secondary mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= @event.event_name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= @event.event_date.strftime('%A, %B %d, %Y') %></h6>
              <p class="card-text"><%= @event.event_desc %></p>
              <p class="mb-0"><strong>Venue:</strong> <%= @event.event_venue %></p>
              <p class="mb-0"><strong>Time:</strong> <%= @event.event_time.strftime('%I:%M %p') %></p>
            </div>
          </div>
          
          <h4 class="mb-3">Registered Students (<%= @registrations.count %>)</h4>
          
          <% if @registrations.any? %>
            <div class="table-responsive">
              <table class="table table-dark table-striped">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Branch</th>
                    <th scope="col">Year</th>
                    <th scope="col">Registered At</th>
                    <th scope="col">Role</th>

                  </tr>
                </thead>
                <tbody>
                  <% @registrations.each_with_index do |registration, index| %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= registration.student.name %></td>
                      <td><%= registration.student.email %></td>
                      <td><%= registration.branch %></td>
                      <td><%= registration.year %></td>
                      <td><%= registration.created_at.strftime('%Y-%m-%d %I:%M %p') %></td>
                      <td><%= registration.student.role %></td>

                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info">
              No students have registered for this event yet.
            </div>
          <% end %>
          
          <div class="text-center mt-4">
            <%= link_to 'Back to My Club', my_club_path, class: "btn btn-primary" %>
            <%= link_to 'All Events', events_path, class: "btn btn-secondary ms-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>