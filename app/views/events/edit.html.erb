<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-white shadow-lg">
        <div class="card-body">

          <h2 class="card-title text-center mb-4">Edit Event</h2>
            <% if @event.errors.any? %>
              <div class="alert" style="color: red; border: 1px solid red; padding: 10px; background-color: #f8d7da; border-radius: 5px;">
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>


          <%= form_with(model: @event, url: event_path(@event), method: :patch, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :event_name, class: "form-label" %>
              <%= form.text_field :event_name, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_desc, class: "form-label" %>
              <%= form.text_area :event_desc, class: "form-control bg-secondary text-white border-0", rows: 4 %>
            </div>

            <div class="mb-3">
              <%= form.label :event_image, class: "form-label" %>
              <%= form.file_field :event_image, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_register_link, class: "form-label" %>
              <%= form.text_field :event_register_link, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_venue, class: "form-label" %>
              <%= form.text_field :event_venue, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_time, class: "form-label" %>
              <%= form.time_field :event_time, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_date, class: "form-label" %>
              <%= form.date_field :event_date, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_deadline, class: "form-label" %>
              <%= form.datetime_field :event_deadline, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="d-grid">
              <%= form.submit "Update Event", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .form-control:focus, .form-select:focus {
    background-color: #495057;
    border-color: #80bdff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
  }
</style>