<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-dark text-white shadow-effect">
        <div class="card-header bg-dark text-white">
          <h2 class="text-center">Role Upgrade</h2>
        </div>
        <div class="card-body">
          <p class="text-center mb-4">Are you a Club Head or an Admin? Enter the appropriate code to upgrade your account.</p>
          
          <%= form_with url: verify_role_code_path, method: :post, class: "mb-4" do |form| %>
            <div class="form-group mb-3">
              <label for="role_type">Select Role</label>
              <%= form.select :role_type, options_for_select([['Club Head', 'club_head'], ['Admin', 'admin']]), {}, class: "form-control bg-dark text-white" %>
            </div>
            
            <div class="form-group mb-3">
              <label for="code">Access Code</label>
              <%= form.text_field :code, class: "form-control bg-dark text-white", placeholder: "Enter your access code" %>
            </div>

            <div class="form-group mb-3">
              <label for="code">Password</label>
              <%= form.password_field :password, class: "form-control bg-dark text-white", placeholder: "Enter your password " %>
            </div>

            <div class="form-group mb-3">
              <label for="code">Confirm Password</label>
              <%= form.password_field :confirm_password, class: "form-control bg-dark text-white", placeholder: "Enter your confirmed password" %>
            </div>
            
            <div class="d-grid gap-2">
              <%= form.submit "Verify Code", class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <div class="text-center mt-3">
            <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>