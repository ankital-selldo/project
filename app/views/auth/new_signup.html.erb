<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign Up</h2>

          <% if @student.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% @student.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with(model: @student, url: signup_path, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.text_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control" %>
              <% if @student.errors[:password].any? %>
                <div class="invalid-feedback">
                  <%= @student.errors[:password][0] %>
                </div>
              <% end %>
            </div>

            <!-- <div class="mb-3">
              <%= form.label :role, class: "form-label" %>
              <%= form.select :role, options_for_select([['User', 'user'], ['Admin', 'admin'], ['Club Head', 'club_head']], 'user'), {}, { class: "form-select" } %>
            </div>-->

            <div class="d-grid">
              <%= form.submit "Sign Up", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
