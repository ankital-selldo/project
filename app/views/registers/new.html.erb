<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-dark text-white shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Register for Event</h2>
          
          <!-- Add event details at the top of the form -->
          <% if @event %>
            <div class="mb-4">
              <h4 class="text-center"><%= @event.event_name %></h4>
              <p class="text-muted text-center"><%= @event.event_date&.strftime('%Y-%m-%d') %> at <%= @event.event_time&.strftime('%I:%M %p') %></p>
            </div>
          <% end %>

          <%= form_with(model: @register, local: true) do |form| %>
            <!-- Remove the duplicate event_id fields and keep just one -->
            <%= form.hidden_field :event_id, value: @event&.id %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control bg-secondary text-white border-0" %>
            </div>

            <div class="mb-3">
              <%= form.label :branch, class: "form-label" %>
              <%= form.select :branch, options_for_select([['Computer', 'Computer'], ['IT', 'IT'], ['EnTC', 'EnTC']]), {}, { class: "form-select bg-secondary text-white border-0" } %>
            </div>

            <div class="mb-3">
              <%= form.label :year, class: "form-label" %>
              <%= form.select :year, options_for_select([['FE', 'FE'], ['SE', 'SE'], ['TE', 'TE'], ['BE', 'BE']]), {}, { class: "form-select bg-secondary text-white border-0" } %>
            </div>

            <div class="d-grid">
              <%= form.submit "Register", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>